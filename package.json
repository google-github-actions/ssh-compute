{
  "name": "ssh-compute",
  "version": "0.1.4",
  "description": "Github Action: Connect to GCP instances via SSH",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build -m src/main.ts -o dist/main && ncc build -m src/post.ts -o dist/post",
    "lint": "eslint src/ --ext .ts,.tsx",
    "format": "prettier --write **/*.ts",
    "test": "mocha -r ts-node/register -t 150s 'tests/unit/*.test.ts' --exit",
    "e2e-tests": "mocha -r ts-node/register -t 150s 'tests/e2e.test.ts' --exit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/google-github-actions/ssh-compute.git"
  },
  "keywords": [
    "actions",
    "google",
    "ssh compute",
    "compute",
    "ssh"
  ],
  "author": "Google LLC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/google-github-actions/ssh-compute/issues"
  },
  "homepage": "https://github.com/google-github-actions/ssh-compute#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/tool-cache": "^2.0.1",
    "@google-github-actions/actions-utils": "^0.4.7",
    "@google-github-actions/setup-cloud-sdk": "^1.1.1",
    "sshpk": "^1.17.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.13",
    "@types/node": "^20.0.0",
    "@types/sshpk": "^1.17.1",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "mocha": "^10.2.0",
    "sinon": "^15.0.2",
    "chai": "^4.3.7"
  }
}
